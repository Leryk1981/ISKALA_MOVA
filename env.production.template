# Application Settings
ENVIRONMENT=production
APP_VERSION=1.1.0
LOG_LEVEL=INFO
DEBUG=false

# API Keys (REPLACE WITH ACTUAL VALUES)
OPENROUTER_API_KEY=your_openrouter_api_key_here
